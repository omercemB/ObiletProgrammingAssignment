@model List<ObiletCase.Models.Api.Journey.JourneyItem>

<div class="container mt-5">
    <h5 class="text-primary fw-bold mb-2">@Model.FirstOrDefault()?.Journey.Origin - @Model.FirstOrDefault()?.Journey.Destination</h5>
    <p class="text-muted">@Model.FirstOrDefault()?.Journey.Departure.ToString("dd MMMM dddd", new System.Globalization.CultureInfo("tr-TR"))</p>

    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary btn-sm mb-3">← Geri Dön</a>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            Uygun sefer bulunamadı.
        </div>
    }
    else
    {
        <div class="d-flex flex-column gap-3">
            @foreach (var item in Model)
            {
                <div class="border rounded shadow-sm p-3 d-flex justify-content-between align-items-center">
                    <div>
                        <div class="d-flex gap-3 mb-1 fw-bold">
                            <span>KALKIŞ</span> <span>→</span> <span>VARIŞ</span>
                        </div>
                        <div class="d-flex gap-3 mb-2 text-primary">
                            <span>@item.Journey.Departure.ToString("HH:mm")</span>
                            <span>→</span>
                            <span>@item.Journey.Arrival.ToString("HH:mm")</span>
                        </div>
                        <div class="text-muted small">
                            @item.Journey.Origin - @item.Journey.Destination
                        </div>
                    </div>

                    <div class="text-end">
                        <span class="badge bg-danger fs-5">@item.InternetPrice.ToString("0.00") TL</span>
                    </div>
                </div>
            }
        </div>
    }
</div>
